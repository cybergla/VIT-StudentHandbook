<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     tools:context=".MainActivity"
    style="@style/AppTheme">
 <LinearLayout
     android:layout_width="fill_parent"
     android:layout_marginTop="0dp"
     android:layout_height="wrap_content" android:padding="20dp" android:orientation="vertical"
     android:elevation="7dp"
     android:background="#3498db">
     <EditText
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" android:hint="Search" android:background="@drawable/searhrectangle"
         android:elevation="5dp" android:textColor="#2c3e50" android:cursorVisible="false" android:onClick="searchClick"
         android:textSize="20dp"/>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" android:layout_marginTop="15dp">
         <TextView
             android:layout_width="wrap_content" android:textSize="20dp" android:textColor="#FFF"
             android:layout_height="wrap_content"  android:text="He" android:background="@drawable/circle"/>
     </LinearLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
         android:gravity="center_horizontal"
        android:layout_height="fill_parent" android:id="@+id/mainNavigator" android:background="#bdc3c7">
      <GridLayout
          android:id="@+id/mainNavGrid"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" android:columnCount="2" android:orientation="horizontal">
          <!-- to be changed !-->
          <android.support.v7.widget.CardView
              xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:id="@+id/academics"
              android:layout_margin = "2dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:onClick="navigate"
              android:layout_marginLeft="10dp"

              android:layout_gravity="top|left"
              card_view:cardElevation="2dp">
              <LinearLayout
                  android:layout_width="fill_parent"
                  android:padding="10dp"
                  android:orientation="vertical"
                  android:background="#F00"
                  android:layout_height="fill_parent">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:textSize="100dp" android:id="@+id/tvHeader"
                      android:textColor="#FFF"
                      android:layout_gravity="center"
                      android:text="Ac" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#FFF"
                      android:textSize="10dp"
                      android:text="Academics"
                      android:layout_gravity="left"/>
              </LinearLayout>

          </android.support.v7.widget.CardView>
          <android.support.v7.widget.CardView
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:id="@+id/college"
              android:onClick="navigate"
              android:layout_margin = "2dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"

              android:layout_gravity="top|left"
              card_view:cardElevation="2dp">
              <LinearLayout
                  android:layout_width="fill_parent"
                  android:padding="10dp"
                  android:orientation="vertical"
                  android:background="#FF0"
                  android:layout_height="fill_parent">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:textSize="100dp"
                      android:textColor="#FFF"
                      android:layout_gravity="center"
                      android:text="Co" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#FFF"
                      android:textSize="10dp"
                      android:text="College"
                      android:layout_gravity="left"/>
              </LinearLayout>

          </android.support.v7.widget.CardView>
          <!-- till here !-->
      </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/searchLayout" android:background="#bdc3c7" android:visibility="gone">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Search Layout , search cards appear here
            " android:textSize="30dp"/>
        </LinearLayout>
</LinearLayout>
