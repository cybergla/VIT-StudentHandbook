<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
<GridLayout
    android:id="@+id/mainNavGrid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:animateLayoutChanges="true"
    android:orientation="horizontal">
    <!-- to be changed !-->

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="academics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="navigate"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top|left"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/academics"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp" android:id="@+id/tvHeader"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Ac" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="Academics"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="college"
        android:onClick="navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top|left"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/college"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Co" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="College"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="hostel"
        android:onClick="navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top|left"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/hostel"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Ho" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="Hostel"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="student_organisations"
        android:onClick="navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top|left"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/stud"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="St" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="Student Organizations"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="life_hacks"
        android:onClick="navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top|left"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/lifehack"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Lh" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="Life Hacks"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="around_vit"
        android:onClick="navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top|left"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/around"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Ar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="Around VIT"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!-- till here !-->
</GridLayout>
</ScrollView>