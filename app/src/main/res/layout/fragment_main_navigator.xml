<GridLayout
    android:id="@+id/mainNavGrid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- to be changed !-->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="academics"
        android:layout_margin = "2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="navigate"
        android:layout_marginLeft="10dp"

        android:layout_gravity="top|left"
        card_view:cardElevation="2dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/academics"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp" android:id="@+id/tvHeader"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Ac" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="Academics"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:tag="college"
        android:onClick="navigate"
        android:layout_margin = "2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:layout_gravity="top|left"
        card_view:cardElevation="2dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/college"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="100dp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:text="Co" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:text="College"
                android:layout_gravity="left"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!-- till here !-->
</GridLayout>